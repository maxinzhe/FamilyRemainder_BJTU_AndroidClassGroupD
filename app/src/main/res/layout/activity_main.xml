<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.xinzhe.familyremainder.MainActivity"
    android:orientation="vertical"
    android:gravity="center_vertical|center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="HappyHouse"
        android:id="@+id/textView"
        android:textSize="@dimen/abc_action_bar_progress_bar_size" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:text="New Button"
            android:id="@+id/button"
            android:background="@drawable/reminder2"
            android:gravity="bottom" />

        <Button
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:text="New Button"
            android:id="@+id/button2"
            android:background="@drawable/community"
            android:gravity="bottom" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:text="New Button"
            android:id="@+id/button3"
            android:background="@drawable/nearby"
            android:gravity="bottom" />

        <Button
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:text="New Button"
            android:id="@+id/button4"
            android:background="@drawable/video"
            android:gravity="bottom" />
    </LinearLayout>

</LinearLayout>
